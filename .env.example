# Variables de entorno para la base de datos
# Puedes usar cualquiera de estos formatos:

# Formato original
USER=tu_usuario_db
HOST=tu_host_db
DATABASE=nombre_db
PASSWORD=tu_password_db

# O formato alternativo (más común en servicios de hosting)
DB_USER=tu_usuario_db
DB_HOST=tu_host_db
DB_NAME=nombre_db
DB_PASSWORD=tu_password_db
DB_PORT=5432

# Puerto del servidor (para producción se asigna automáticamente)
PORT=3000

# Configuración de entorno
NODE_ENV=production
